# =============================================================================
# Application Configuration
# =============================================================================

APP_NAME="Construction Intelligence Platform"
APP_VERSION="0.1.0"
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# =============================================================================
# Security
# =============================================================================

# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-production-secret-key-minimum-32-characters-required

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Database Configuration
# =============================================================================

# REQUIRED: PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://produser:secure_password@prod-db.example.com:5432/construction_intel

# For Docker Compose setup
POSTGRES_USER=produser
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_DB=construction_intel
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================

# REQUIRED: Redis connection URL for caching
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_PORT=6379

# =============================================================================
# API Keys
# =============================================================================

# OPTIONAL: OpenAI API key for AI/ML features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OPTIONAL: Monetization platform API key
MONETIZATION_API_KEY=your-monetization-api-key-here

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Format: https://domain1.com,https://domain2.com
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker image configuration
IMAGE_TAG=latest
GITHUB_REPOSITORY_OWNER=Gooderman932

# Service ports
BACKEND_PORT=8000
FRONTEND_PORT=80

# =============================================================================
# Frontend Configuration
# =============================================================================

# API endpoint for frontend
VITE_API_URL=https://api.your-production-domain.com

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Log retention in days
LOG_RETENTION_DAYS=90

# =============================================================================
# Email Configuration (Optional)
# =============================================================================

# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@your-domain.com
# SMTP_PASSWORD=email_password
# SMTP_FROM=noreply@your-domain.com

# =============================================================================
# Cloud Storage (Optional)
# =============================================================================

# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Google Cloud Storage Configuration
# GCS_BUCKET=your-gcs-bucket
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# =============================================================================
# Backup Configuration
# =============================================================================

BACKUP_DIR=./backups
RETENTION_DAYS=30

# Upload backups to cloud storage
# S3_BUCKET=your-backup-bucket
# GCS_BUCKET=your-backup-bucket

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# =============================================================================
# Rate Limiting
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# SSL/TLS Configuration
# =============================================================================

# Force HTTPS redirects
FORCE_HTTPS=true

# =============================================================================
# Session Configuration
# =============================================================================

SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=5

# =============================================================================
# Resource Limits
# =============================================================================

# Maximum upload file size (in MB)
MAX_UPLOAD_SIZE_MB=10

# API request timeout (in seconds)
API_TIMEOUT_SECONDS=30

# =============================================================================
# Notes
# =============================================================================
#
# 1. Never commit this file with real values to version control
# 2. Ensure all REQUIRED values are filled in
# 3. Use strong, unique passwords for all services
# 4. Rotate secrets regularly (recommended: every 90 days)
# 5. Store this file securely (e.g., password manager, vault service)
# 6. For production, consider using a secrets management service
#    (e.g., AWS Secrets Manager, HashiCorp Vault, Azure Key Vault)
