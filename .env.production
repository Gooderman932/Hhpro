# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env for production deployment
# Fill in all required values before deploying

# =====================================================
# APPLICATION SETTINGS
# =====================================================
APP_NAME="BuildIntel Pro"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# =====================================================
# SECURITY - REQUIRED - CHANGE THESE!
# =====================================================
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS

# =====================================================
# DATABASE CREDENTIALS - REQUIRED
# =====================================================
POSTGRES_USER=buildintel_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=construction_intel

# =====================================================
# REDIS CREDENTIALS - REQUIRED
# =====================================================
REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# =====================================================
# API KEYS - OPTIONAL BUT RECOMMENDED
# =====================================================
# OpenAI API for ML features (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# =====================================================
# CORS CONFIGURATION - REQUIRED
# =====================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =====================================================
# APPLICATION URLS - REQUIRED
# =====================================================
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
VITE_API_URL=https://api.yourdomain.com

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=INFO

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_WIN_PROBABILITY=true
ENABLE_DEMAND_FORECAST=true
ENABLE_COMPETITIVE_INTEL=true
ENABLE_WHITE_LABEL=true
ENABLE_API_ACCESS=true
ENABLE_EXPORTS=true

# =====================================================
# MONITORING - OPTIONAL
# =====================================================
# Sentry DSN for error tracking (get from: https://sentry.io)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# =====================================================
# EMAIL - OPTIONAL
# =====================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="BuildIntel Pro"

# =====================================================
# ADMIN - REQUIRED FOR FIRST SETUP
# =====================================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
SUPPORT_EMAIL=support@yourdomain.com
